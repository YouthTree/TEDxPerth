%h2.title Viewing User

= show_for @user do |s|
  
  = s.attribute :login
  
  = s.attribute :display_name
  
  = s.attribute :email
  
  = s.attribute :admin do
    = @user.admin? ? "Yes" : "No"
  
  = s.attribute :roles do
    - if @user.roles.empty?
      %p.empty This user has no roles.
    - else
      %ul#roles
        - @user.roles.each do |role|
          %li= role.name.to_s.humanize